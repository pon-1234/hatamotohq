<div class="ctext-wrap">
  <div>
    <div class="overflow-auto">
      <div class="preview">
        <div>
          <div class="d-flex">
            <div class="reservation-item">
              <meta charset="UTF-8">
              <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1, maximum-scale=1">
              <meta name="format-detection" content="telephone=no">
              <link rel="stylesheet" type="text/css" href="https://static.line-scdn.net/line_flexible_msg/172927b9b3c/css/sp/main.css?27354779">
              <div class="LyMe">
                <div class="T1 fxLTR">
                  <div class="t1Hero">
                    <div class="ExCover MdImg ExFull">
                      <div>
                        <%= image_tag @room_information[:room_photo_url], class: 'w-100' if @room_information[:room_photo_url] %>
                      </div>
                    </div>
                  </div>
                  <div class="ExHasFooter t1Body">
                    <div class="spcSm MdBx vr">
                      <div class="MdBx hr bl">
                        <div class="MdTxt ExXl fl0 fxC0 ExWrap ExWB">
                          <p><%= @latest_pms_reservation.charge_total %>円</p>
                        </div>
                      </div>
                      <div class="MdBx hr bl ExMgnTMd">
                        <div class="MdTxt fl2 ExWrap ExWB ExLg">
                          <p><%= @latest_pms_reservation.room_list.first['room_name'] %></p>
                        </div>
                      </div>
                      <div class="MdBx hr bl ExMgnTMd">
                        <div class="MdTxt fl1">
                          <p><%= @room_information.try(:[], :room_area) %></p>
                        </div>
                        <div class="MdTxt fl1">
                          <p><%= @latest_pms_reservation.room_list.first['pax_count'] %></p>
                        </div>
                        <div class="MdTxt fl1">
                          <p><%= @room_information && @room_information.try(:[], :not_smock) ? '禁煙' : '喫煙' %></p>
                        </div>
                      </div>
                    </div>
                  </div>
                  <div class="t1Footer">
                    <div class="spcSm MdBx vr">
                      <div class="ExBtn1 MdBtn">
                        <%= button_to 'Cancel', cancel_reservation_contacts_path, params: {friend_line_id: @friend.id, last_pms_reservation_id: @latest_pms_reservation.id} %>
                        <%= button_to 'Confirmed OK', confirmed_reservation_contacts_path, remote: true, params: {friend_line_id: @friend.id, last_pms_reservation_id: @latest_pms_reservation.id} %>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>