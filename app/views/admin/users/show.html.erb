<div class="mw-1200" >
  <div class="card">
    <div class="card-header d-flex align-items-center">
      <%= link_to admin_users_path, class: "text-info" do %>
        <i class="fa fa-arrow-left"></i>
        Back to list
      <% end %>
      <h5 class="m-auto font-weight-bold">User detail</h5>
    </div>
    <div class="card-body">
      <table class="table">
        <tbody>
          <tr>
            <th class="fw-300">email</th>
            <td><%= @user.email %></td>
          </tr>
          <tr>
            <th class="fw-300">name</th>
            <td><%= @user.name %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>