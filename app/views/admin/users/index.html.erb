<div class="row">
  <div class="col-12">
    <div class="card">
      <div class="card-header d-flex align-items-center">
        <%= link_to new_admin_user_path do %>
          <button type="button" class="btn btn-info fw-120 mr-2"><i class="fa fa-plus"></i> 新規登録 </button>
        <% end %>
        <%= search_form_for @q, url: search_admin_users_path do |f| %>
          <div class="d-flex">
            <%= f.search_field :name_or_company_name_or_email_cont, placeholder: "氏名、会社名、メールで検索", class: "form-control mw-300 mr-2" %>
            <%= f.select :status_eq, 
              options_for_select([["有効", "active"], ["無効", "blocked"]], @params.present? && @params[:status_eq]),
              { include_blank: "すべて" },
              { class: "form-control filter-box mr-2"} 
            %>
            <button class="btn btn-info fw-110" type="submit">検索</button>
          </div>
        <% end %>
      </div>

      <div class="card-body">
        <div class="table-responsive">
           <table class="table table-bordered table-striped">
           <%# Header %>
              <thead>
                <tr>
                  <th class="fw-50 text-center"><%= sort_link(@q, :id, 'ID', default_order: :desc) %></th>
                  <th class="fw-150"><%= sort_link(@q, :name, '氏名', default_order: :asc) %></th>
                  <th class="fw-200"><%= sort_link(@q, :email, 'メールアドレス', default_order: :asc) %></th>
                  <th class="fw-200">会社名</th>
                  <th class="fw-150">登録日時</th>
                  <th class="fw-100">状況</th>
                  <th class="fw-200"></th>
                </tr>
              </thead>
              <tbody>
                <% @users.each do |user| %>
                  <tr>
                    <td class="text-center"><%= link_to user.id, admin_user_path(user) %></td>
                    <td><%= user.name %></td>
                    <td><%= user.email %></td>
                    <td><%= user.company_name %></td>
                    <td><%= formatted_time(user.created_at) %></td>
                    <td>
                      <%= render_user_status(user.status) %>
                    </td>
                    <td>
                      <div class="btn-group">
                        <%= link_to '編集', edit_admin_user_path(user), class: "btn btn-warning btn-sm" %>
                        <button type="button" class="btn btn-warning dropdown-toggle dropdown-icon" data-toggle="dropdown" aria-expanded="false"></button>
                        <div class="dropdown-menu bg-white" role="menu" style="">
                          <a class="dropdown-item" role="button" data-toggle="modal" data-target="#confirmSwitch" onclick="confirmScope(<%= user.id %>)">
                            <% if user.status.eql?('active')%>
                              ブロックする
                            <% else %>
                              ブロック解除する
                            <% end %>
                          </a>
                          <div class="dropdown-divider"></div>
                          <%= link_to delete_confirm_admin_user_path(user), remote: true, class: "dropdown-item", role: "button" do%>
                            削除する
                          <% end %>
                        </div>
                      </div>
                      <%= link_to sso_admin_user_path(user), class: "btn btn-sm btn-info" do%>
                        ログイン
                      <% end %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
           <%# Data %>
           </table>
        </div>
        <%# Pagination %>
        <div class="d-flex justify-content-center mt-4">
          <% if @users.size == 0 %>
            <b>データはありません。</b>
          <% end %>
          <%= paginate @users %>
        </div>
      </div>
    </div>
  </div>
</div>

<div id='confirmDelContent'></div>
<modal-change-user-status :users="<%= @users.to_json %>"></modal-change-user-status>
<input type="hidden" id="inputValue">
<script>
  function confirmScope(id) {
    $('#inputValue').val(id);
  }
</script>