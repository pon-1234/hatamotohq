<div class="account-pages mt-5 mb-5">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-lg-5">
        <div class="card">
          <!-- START: Logo -->
          <div class="card-header pt-4 pb-4 text-center bg-info">
            <a href="#" class="text-white text-uppercase" style="font-size:1.2rem;">
              <span>HOTEL INSIGHT CRM</span>
            </a>
          </div>
          <!-- END: Logo -->
          <!-- START: Form -->
            <div class="card-body p-4">
                <div class="text-center w-75 m-auto">
                    <h4 class="text-dark-50 text-center mt-0 font-weight-bold"><%= t('devise.passwords.edit.change_your_password') %></h4>
                </div>
                <admin-password-edit :reset_password_token="'<%= params[:reset_password_token] %>'"></admin-password-edit>
            </div>
          <!-- End: Form -->
        </div>
        <!-- end card -->

        <div class="row mt-3">
          <div class="col-12 text-center">
            <p class="text-muted"><%= link_to "<b>#{t('devise.sessions.new.sign_in')}</b>".html_safe, new_admin_session_path, class: "text-muted ml-1" %>
              <%= t('devise.shared.links.back_to') %></p>
          </div> <!-- end col -->
        </div>
        <!-- end row -->
      </div> <!-- end col -->
    </div>
    <!-- end row -->
  </div>
  <!-- end container -->
</div>