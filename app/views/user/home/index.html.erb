<div class="col-12">
  <div class="page-title-box">
    <h4 class="page-title">ダッシュボード</h4>
  </div>
</div>

<div class="row">
  <div class="col-lg-8">
    <div class="row">
      <div class="col-xl-6">
        <div class="card widget-flat">
          <div class="card-body">
            <div class="float-right">
              <i class="mdi mdi-account-multiple widget-icon"></i>
            </div>
            <h5 class="text-muted font-weight-normal mt-0" title="Number of Customers">友達数</h5>
            <h3 class="mt-3 mb-3"><%= @friend_count %>人</h3>
            <p class="mb-0 text-muted" hidden>
              <span class="text-success mr-2"><i class="dripicons-chevron-up"></i> 5.27%</span>
              <span class="text-nowrap">Since last month</span>
            </p>
          </div> <!-- end card-body-->
        </div> <!-- end card-->
      </div> <!-- end col-->

      <div class="col-xl-6">
        <div class="card widget-flat">
          <div class="card-body">
            <div class="float-right">
              <i class="mdi mdi-send widget-icon widget-danger"></i>
            </div>
            <h5 class="text-muted font-weight-normal mt-0" title="Number of Sent Messages">月のメッセージ送信数</h5>
            <h3 class="mt-3 mb-3"><%= @insight&.total_usage || 0 %> / <%= @insight&.quota || '-' %>メッセージ</h3>
            <p class="mb-0 text-muted" hidden>
              <span class="text-danger mr-2"><i class="mdi mdi-arrow-down-bold-bold"></i> 1.08%</span>
              <span class="text-nowrap">Since last month</span>
            </p>
          </div> <!-- end card-body-->
        </div> <!-- end card-->
      </div> <!-- end col-->
    </div>

    <div class="card">
      <div class="card-header border-bottom border-primary text-md">
        <b>最新受信メッセージ一覧</b>
      </div>
      <div class="card-body p-0">
        <% unless @messages.empty? %>
          <table class="table table-centered mb-0">
            <thead>
              <tr>
                <th>送信日時</th>
                <th>名前</th>
                <th>メッセージ</th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% @messages.each do |message| %>
                <tr>
                  <td>
                    <%= formatted_time(message.created_at) %>
                  </td>
                  <td>
                    <%= message.sender.name %>
                  </td>
                  <td class="max-2-lines">
                    <%= message.text %>
                  </td>
                </tr>
                <% end %>
            </tbody>
          </table>
        <% else %>
          <div class="my-5 font-weight-bold text-center">メッセージはありません。</div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="col-lg-4">
    <home-announcements></home-announcements>
  </div>
</div>