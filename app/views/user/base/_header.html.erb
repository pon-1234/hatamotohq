<!-- Topbar Start -->
<div class="navbar-custom">
  <ul class="list-unstyled topbar-right-menu float-right mb-0">
    <li class="dropdown notification-list">
      <a class="nav-link dropdown-toggle nav-user arrow-none mr-0" data-toggle="dropdown" href="#" role="button"
        aria-haspopup="false" aria-expanded="false">
        <span class="account-user-avatar">
          <%- if current_user&.avatar.attached? %>
            <img src="<%= rails_blob_url(current_user&.avatar) %>" alt="user-image" class="rounded-circle">
          <% else %>
            <img src="https://icon-library.com/images/user-icon-image/user-icon-image-18.jpg" alt="user-image" class="rounded-circle">
          <% end %>
        </span>
        <span>
          <span class="account-user-name"><%= current_user&.name %></span>
          <span class="account-position">管理者</span>
        </span>
      </a>
      <div class="dropdown-menu dropdown-menu-right dropdown-menu-animated topbar-dropdown-menu profile-dropdown">
        <!-- item-->
        <%= link_to user_setting_index_path, class: "dropdown-item notify-item" do %>
          <i class="mdi mdi-account-circle mr-1"></i>
          <span>プロファイル</span>
        <% end %>

        <!-- item-->
        <%= link_to destroy_user_session_path, method: :delete, class: "dropdown-item notify-item" do %>
          <i class="mdi mdi-logout mr-1"></i>
          <span>ログアウト</span>
        <% end %>
      </div>
    </li>

  </ul>
  <div class="float-left d-sm-block d-md-none ml-3">
    <%= link_to user_root_path, class: "logo ml-4 logo-light" do %>
      <span class="text-dark brand-text font-weight-bold">LINE CMS</span>
    <% end %>
  </div>
  <button class="button-menu-mobile open-left disable-btn">
    <i class="mdi mdi-menu"></i>
  </button>
</div>
<!-- end Topbar -->

<!-- Navbar -->
<nav class="main-header navbar navbar-expand navbar-light" hidden>
  <!-- Left navbar links -->
  <ul class="navbar-nav">
    <li class="nav-item">
      <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
    </li>
  </ul>
  <ul class="navbar-nav ml-auto">
    <li class="dropdown user user-menu">
      <a class="nav-link user-panel" data-toggle="dropdown" href="#">
        <span class="hidden-xs">
          <%= current_user&.email %>
        </span>
        <%- if current_user&.avatar.attached? %>
          <img src="<%= rails_blob_url(current_user&.avatar) %>" class="user-image">
        <% else %>
          <img src="https://icon-library.com/images/user-icon-image/user-icon-image-18.jpg" class="user-image"
            alt="User Image">
        <% end %>
      </a>
      <div class="dropdown-menu dropdown-menu-lg dropdown-menu-right">
        <%= link_to '<i class="fas fa-sign-out-alt mr-1"></i><p>ログアウト</p>' .html_safe, destroy_user_session_path,
          method: :delete, class: "dropdown-item dropdown-footer d-flex align-items-center justify-content-center" %>
      </div>
    </li>
  </ul>
</nav>
<!-- /.navbar -->