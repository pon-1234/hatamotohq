# Staging Environment Variables for Fly.io
# Copy this file to .env.staging and fill in your values

# Rails Configuration
RAILS_ENV=staging
SECRET_KEY_BASE=your-secret-key-base-here

# Database (automatically set by Fly.io)
# DATABASE_URL will be set automatically when you attach the database

# Redis Configuration
REDIS_URL=redis://hatamotohq-staging-redis.internal:6379/0

# LINE Bot Configuration
LINE_CHANNEL_ID=your-line-channel-id
LINE_CHANNEL_SECRET=your-line-channel-secret
LINE_CHANNEL_ACCESS_TOKEN=your-line-channel-access-token
LINE_WEBHOOK_URL=https://hatamotohq-staging.fly.dev/webhooks

# AWS S3 Configuration (for Active Storage)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=ap-northeast-1
AWS_S3_BUCKET=hatamotohq-staging-storage

# Mail Configuration
SMTP_ADDRESS=smtp.gmail.com
SMTP_PORT=587
SMTP_DOMAIN=hatamotohq-staging.fly.dev
SMTP_USER_NAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Application Settings
DEFAULT_URL_HOST=hatamotohq-staging.fly.dev
FORCE_SSL=true

# Sidekiq Configuration
SIDEKIQ_CONCURRENCY=10

# Optional: Sentry for Error Tracking
# SENTRY_DSN=your-sentry-dsn

# Optional: Google APIs
# GOOGLE_CLIENT_ID=your-google-client-id
# GOOGLE_CLIENT_SECRET=your-google-client-secret

# Vue app
VITE_ROOT_PATH=https://hatamotohq-staging.fly.dev
VITE_GOOGLE_MAP_KEY=
VITE_WS_FLEXA_URL=
VITE_SERVEY_MEDIA_FLEXA_URL=